{
  "manifest_version": 3,
  "name": "Compliments Extension",
  "version": "1.0",
  "permissions": ["alarms", "storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://complimentsapi-274811442e1d.herokuapp.com/*"
  ]
}
