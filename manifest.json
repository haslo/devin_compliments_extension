{
  "manifest_version": 2,
  "name": "Compliments Extension",
  "version": "1.0",
  "description": "Display a compliment from an API every minute",
  "permissions": [
    "activeTab",
    "https://jsonplaceholder.typicode.com/posts/1"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
